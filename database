CREATE TABLE `SocialMap`.`Comment` (
  `C_ID` bigint(20) unsigned NOT NULL AUTO_INCREMENT,
  `E_ID` int(11) NOT NULL,
  `U_ID` int(11) NOT NULL,
  `TO_COMMENT_ID` int(11) DEFAULT NULL,
  `CONTENT` varchar(150) NOT NULL,
  `TIME` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  PRIMARY KEY (`C_ID`),
  UNIQUE KEY `C_ID` (`C_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=4 DEFAULT CHARSET=latin1;

CREATE TABLE `SocialMap`.`Event` (
  `E_ID` bigint(20) unsigned NOT NULL AUTO_INCREMENT,
  `TITLE` varchar(50) NOT NULL,
  `PICTURE` varchar(100) NOT NULL,
  `INTRODUCTION` varchar(50) NOT NULL,
  `CATEGORY` varchar(45) NOT NULL,
  `VENUE` varchar(45) NOT NULL,
  `date` date NOT NULL,
  `S_TIME` timestamp NULL DEFAULT NULL,
  `E_TIME` timestamp NULL DEFAULT NULL,
  `cost` float DEFAULT NULL,
  `URL` varchar(45) DEFAULT NULL,
  PRIMARY KEY (`E_ID`),
  UNIQUE KEY `E_ID_UNIQUE` (`E_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=3 DEFAULT CHARSET=latin1;


CREATE TABLE `SocialMap`.`Follows` (
  `U_ID` int(11) NOT NULL,
  `E_ID` int(11) NOT NULL,
  PRIMARY KEY (`U_ID`,`E_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE `SocialMap`.`Owns` (
  `U_ID` int(11) NOT NULL,
  `E_ID` int(11) NOT NULL,
  PRIMARY KEY (`U_ID`,`E_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE `SocialMap`.`Rate` (
  `U_ID` int(11) NOT NULL,
  `E_ID` int(11) NOT NULL,
  `SCORE` float NOT NULL,
  PRIMARY KEY (`U_ID`,`E_ID`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

CREATE TABLE `SocialMap`.`User` (
  `U_ID` bigint(20) unsigned NOT NULL AUTO_INCREMENT,
  `USERNAME` varchar(50) NOT NULL,
  `PASSWORD` varchar(50) NOT NULL,
  `PHONE` varchar(50) NOT NULL,
  `ICON` varchar(100) NOT NULL,
  `STATUS` tinyint(1) NOT NULL DEFAULT '0',
  PRIMARY KEY (`U_ID`),
  UNIQUE KEY `U_ID` (`U_ID`)
) ENGINE=InnoDB AUTO_INCREMENT=3 DEFAULT CHARSET=latin1;





